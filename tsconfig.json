{
    "compilerOptions": {
        "moduleResolution": "node",
        "noEmit": false,
        "strict": true,
        "target": "esnext",
        "esModuleInterop": true,
        "jsx": "react-native",
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "preserveConstEnums": true,
        "allowJs": false,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "traceResolution": false,
        "module": "esnext",
        "skipLibCheck": true,
        "rootDir": "src",
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "suppressImplicitAnyIndexErrors": true,
        "baseUrl": ".",
        "checkJs": false
    },
    "exclude": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "node_modules",
        "**/node_modules/*",
        "android",
        "ios",
        "dist",
        "scripts",
        "storybook",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js",
        "index.js"
    ]
}
